<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <include
        layout="@layout/item_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center_horizontal"
        android:layout_marginBottom="?attr/actionBarSize"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
        <TextView
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:padding="12dp"
            android:layout_margin="8dp"
            android:background="@drawable/div"
            android:text="This app is developed by:"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TableLayout
            android:background="@drawable/div"
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:stretchColumns="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/feedback"
            app:layout_constraintTop_toBottomOf="@+id/about"
            app:layout_constraintVertical_bias="0.004"
            tools:layout_editor_absoluteX="16dp">
            <TableRow>
                <TextView
                    android:background="@drawable/div2"
                    android:layout_margin="2dp"
                    android:padding="13dp"
                    android:text="Muhammadjon Hakimov" />
                <TextView
                    android:clickable="true"
                    android:onClick="gitMuhammad"
                    android:background="@drawable/div2"
                    android:layout_margin="2dp"
                    android:padding="13dp"
                    android:text="MrHakimov"
                    android:textColor="@android:color/holo_blue_dark" />
            </TableRow>
            <TableRow>
                <TextView
                    android:background="@drawable/div2"
                    android:layout_margin="2dp"
                    android:padding="13dp"
                    android:text="Amirjon Qodirov" />
                <TextView
                    android:background="@drawable/div2"
                    android:layout_margin="2dp"
                    android:padding="13dp"
                    android:clickable="true"
                    android:onClick="gitAmir"
                    android:text="AmirjonQodirov"
                    android:textColor="@android:color/holo_blue_dark" />
            </TableRow>
        </TableLayout>



        <TextView
            android:id="@+id/feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:padding="12dp"
            android:layout_margin="8dp"
            android:background="@drawable/div"
            android:text="If something goes wrong, if you find any mistakes or if you have any advices, business offers or appreciation, you can email us at:"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/tableLayout"
            />
        <TableLayout
            android:background="@drawable/div"
            android:id="@+id/tableLayoutMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:stretchColumns="1"
            android:padding="5dp"
            app:layout_constraintBottom_toTopOf="@+id/image"
            app:layout_constraintTop_toBottomOf="@+id/feedback"
            app:layout_constraintVertical_bias="0.004"
            tools:layout_editor_absoluteX="16dp"
            >
            <TableRow
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/div2"
                android:layout_marginBottom="2dp"
                android:padding="2dp"

                >
                <TextView
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_margin="2dp"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:clickable="true"
                    android:onClick="mailAmir"
                    android:text="amirqodirov8383@gmail.com" />
            </TableRow>
            <TableRow
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/div2"
                android:layout_marginTop="2dp"
                android:padding="2dp"
                >
            <TextView
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:clickable="true"
                android:onClick="mailMuhammad"
                android:textSize="12sp"
                android:textColor="@android:color/holo_blue_dark"
                android:text="hakimov0777@gmail.com"
                />
            </TableRow>
        </TableLayout>
            <ImageView
                android:id="@id/image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="4:3"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:scaleType="center"
                android:src="@drawable/ad"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toBottomOf="@+id/tableLayoutMail"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>