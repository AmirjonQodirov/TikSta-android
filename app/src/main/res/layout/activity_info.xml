<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        layout="@layout/item_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/actionBarSize"
        android:foregroundGravity="center_horizontal">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/aboutUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"

                android:text="About us"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@+id/devs"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/devs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/div"
                android:padding="12dp"
                app:layout_constraintBottom_toTopOf="@+id/feedback"
                >

                <TextView
                    android:id="@+id/about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This app is developed by:"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/div"
                    android:stretchColumns="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/about"

                    >

                    <TableRow
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/div2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:layout_margin="2dp"
                            android:background="@drawable/div2"
                            android:clickable="true"
                            android:onClick="gitMuhammadjon"
                            android:padding="4dp"
                            android:text="github.com/MrHakimov"
                            android:textColor="@android:color/holo_blue_dark" />
                    </TableRow>

                    <TableRow
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/div2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:layout_margin="2dp"
                            android:background="@drawable/div2"
                            android:clickable="true"
                            android:onClick="gitAmir"
                            android:padding="4dp"
                            android:text="github.com/AmirjonQodirov"
                            android:textColor="@android:color/holo_blue_dark" />
                    </TableRow>

                    <TableRow
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/div2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:layout_margin="2dp"
                            android:background="@drawable/div2"
                            android:clickable="true"
                            android:onClick="gitBehruz"
                            android:padding="4dp"
                            android:text="github.com/MansurovB-source"
                            android:textColor="@android:color/holo_blue_dark" />
                    </TableRow>
                </TableLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/div"
                android:padding="12dp"
                app:layout_constraintBottom_toTopOf="@+id/native_ad"
                >

                <TextView
                    android:id="@+id/feedbacktext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="If something goes wrong, if you find any mistakes or if you have any advices, business offers or appreciation, you can email us at:"
                     />

                <TableLayout
                    android:id="@+id/tableLayoutMail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/div"
                    android:padding="5dp"
                    android:stretchColumns="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/feedbacktext"
                    app:layout_constraintVertical_bias="0.004"
                    tools:layout_editor_absoluteX="16dp">

                    <TableRow
                        android:layout_marginTop="2dp"
                        android:background="@drawable/div2"
                        android:padding="2dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_margin="2dp"
                            android:clickable="true"
                            android:onClick="mailMuhammadjon"
                            android:text="hakimov0777@gmail.com"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textSize="12sp" />
                    </TableRow>

                    <TableRow
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/div2"
                        android:padding="2dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"

                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_margin="2dp"
                            android:clickable="true"
                            android:onClick="mailAmir"
                            android:text="amirqodirov8383@gmail.com"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textSize="12sp" />
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="2dp"
                        android:background="@drawable/div2"
                        android:padding="2dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_margin="2dp"
                            android:clickable="true"
                            android:onClick="mailBehruz"
                            android:text="bekha.m2000.bm@gmail.com"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textSize="12sp" />
                    </TableRow>
                </TableLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <FrameLayout
                android:id="@+id/native_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/feedback"
                android:layout_margin="8dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>